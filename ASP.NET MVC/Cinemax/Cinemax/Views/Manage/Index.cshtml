@model Cinemax.Models.IndexViewModel
@{
    ViewBag.Title = "Administrar cuenta";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Contraseña:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Cambiar la contraseña", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Crear", "SetPassword")
            }
            ]
        </dd>
        <dt>Número telefónico:</dt>
        <dd>
            [
            @if (Model.PhoneNumber != null)
            {
                @Html.ActionLink("Eliminar número telefónico", "RemovePhoneNumber")
            }
            else
            {
                @Html.ActionLink("Agregar número telefónico", "AddPhoneNumber")
            }
            ]
        </dd>
    </dl>
</div>
